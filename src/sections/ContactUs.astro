---
import { Image } from 'astro:assets';
import thumbstackLogo from '../assets/thumbtack.webp';
import ArrowRight from '../assets/icons/arrow-right.svg';
---

<section class="relative overflow-hidden py-20 bg-gradient-to-br from-gray-50 to-gray-100">
	<div class="relative z-10 container mx-auto px-6 max-w-4xl">
		<div class="bg-white/80 backdrop-blur-xl rounded-3xl p-8 md:p-12 shadow-2xl border border-white/50 text-center">
			<h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6 leading-tight">
				Connect With Us for
				<span class="relative inline-block">
					<span class="bg-gradient-to-r from-battle-yellow to-yellow-400 bg-clip-text text-transparent">
						More Information
					</span>
				</span>
			</h2>
			<p class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto mb-8">
				Let us know how we can help. If you have any questions or concerns about the residential and commercial
				electrical services we offer in <strong class="text-gray-800 font-semibold"
					>Miami-Dade, Broward, and Monroe County, Florida</strong
				>, please do not hesitate to contact us. We will get back to you as soon as possible.
			</p>
			<div class="mb-12">
				<a
					href="/contact-us"
					class="group relative inline-flex items-center gap-3 px-8 py-4 bg-battle-yellow hover:bg-battle-yellow-hover text-black font-bold text-lg rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-battle-yellow/50 focus:ring-offset-2"
				>
					<span class="relative z-10">Reach Out to Us</span>
					<ArrowRight
						class="relative z-10 w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
					/>
				</a>
			</div>
		</div>

		<div class="mt-12 pt-8 border-t border-gray-200 text-center">
			<p class="text-sm text-gray-500 mb-6 font-medium">Also find us on:</p>
			<a
				href="https://www.thumbtack.com/fl/homestead/electrical-repairs/battle-electric/service/446001654848380937"
				target="_blank"
				rel="noopener noreferrer"
				class="group relative inline-block p-6 bg-white rounded-2xl shadow-md border-2 border-gray-100 hover:border-battle-yellow/50 hover:shadow-xl transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-battle-yellow/30 focus:ring-offset-2"
				title="View Battle Electric profile and reviews on Thumbtack - Miami-Dade electrical services"
				aria-label="Visit our Thumbtack profile to see customer reviews and hire our electrical services"
			>
				<Image
					src={thumbstackLogo}
					alt="Battle Electric on Thumbtack - Professional electrical services in Miami-Dade, Broward, and Monroe County with verified customer reviews"
					width={100}
					height={60}
					loading="lazy"
					format="webp"
					quality={90}
					class="block transition-all duration-300 group-hover:brightness-110 group-hover:scale-105"
				/>
				<div
					class="absolute inset-0 bg-gradient-to-br from-battle-yellow/90 to-yellow-400/90 backdrop-blur-sm flex flex-col items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300 rounded-2xl"
				>
					<span class="text-black font-bold text-sm">View Our Reviews</span>
					<svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
					</svg>
				</div>
				<div
					class="absolute -top-2 -right-2 w-4 h-4 bg-battle-yellow rounded-full border-2 border-white shadow-sm group-hover:scale-110 transition-transform duration-300"
				>
				</div>
			</a>
		</div>
	</div>
</section>

<style>
	@media (prefers-reduced-motion: reduce) {
		* {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
		}
	}
</style>
