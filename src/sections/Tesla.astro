---
// src/components/sections/TeslaSection.astro
// Sección Tesla/About específica para Battle Electric - Contenido fijo

export interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;
---

<section
	class={`wall-connector grid grid-cols-1 md:grid-cols-2 p-8 items-center gap-12 max-w-6xl mx-auto ${className}`}
	id="about"
	aria-labelledby="tesla-title"
>
	<div class="tesla-text">
		<h2 id="tesla-title" class="text-2xl md:text-3xl font-bold mb-4">Dedicated Industry Experts</h2>

		<p class="text-gray-700 leading-relaxed text-lg">
			We are a family-owned and operated business with more than 35 years of combined experience in the electrical
			industry. Built on integrity, honesty, credibility, and responsibility, our company guarantees excellent
			customer service in every electrical task, big or small.
		</p>

		<a
			href="/about-us"
			class="inline-flex items-center gap-2 border-2 border-blue-600 text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition-all duration-300 group"
			aria-label="Read more about Battle Electric"
		>
			Read More About Us
			<svg
				class="w-4 h-4 transition-transform group-hover:translate-x-1"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
				aria-hidden="true"
			>
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
		</a>
	</div>

	<div class="tesla-image-container flex justify-center">
		<a
			href="https://www.tesla.com/support/charging/wall-connector"
			target="_blank"
			rel="noopener noreferrer"
			class="tesla-connector-link"
			aria-label="Learn more about Tesla Wall Connector installation services"
		>
			<img src="/tesla/Black/tesla_connector.svg" alt="Tesla wall connector" loading="lazy" />
		</a>
	</div>
</section>

<style>
	/* ESTILOS EXACTOS DEL ORIGINAL */
	.tesla-connector-link {
		display: inline-block;
		padding: 1.5rem;
		border-radius: 1rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 2px solid transparent;
	}

	.tesla-connector-link:hover {
		background: rgba(220, 38, 38, 0.1);
		border-color: #dc2626;
		transform: translateY(-4px);
		box-shadow: 0 12px 35px rgba(220, 38, 38, 0.25);
	}

	.tesla-connector-link img {
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.tesla-connector-link:hover img {
		transform: scale(1.05) rotate(2deg);
	}

	/* Responsive improvements - EXACTO DEL ORIGINAL */
	@media (max-width: 768px) {
		.wall-connector {
			padding: 2rem 1rem;
			gap: 2rem;
		}

		.tesla-connector-link {
			padding: 1rem;
		}

		.tesla-connector-link img {
			width: 8rem;
			height: 8rem;
		}
	}

	/* Accessibility - Reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.tesla-connector-link,
		.tesla-connector-link img {
			transition: none;
		}

		.tesla-connector-link:hover img {
			transform: none;
		}
	}
</style>

