---
import Chevron from '../assets/icons/chevron.svg';

export interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;
---

<section
	class={`wall-connector grid grid-cols-1 md:grid-cols-2 p-8 items-center gap-12 max-w-6xl mx-auto ${className}`}
	id="about"
	aria-labelledby="tesla-title"
>
	<div class="tesla-text">
		<h3 id="tesla-title" class="text-2xl md:text-3xl font-bold mb-4">Dedicated Industry Experts</h3>

		<p class="text-gray-700 leading-relaxed text-lg">
			We are a family-owned and operated business with more than 35 years of combined experience in the electrical
			industry. Built on integrity, honesty, credibility, and responsibility, our company guarantees excellent
			customer service in every electrical task, big or small.
		</p>

		<a
			href="/about-us"
			class="inline-flex items-center gap-2 border-2 border-battle-yellow text-black px-6 py-3 rounded-lg font-semibold hover:bg-battle-yellow transition-all duration-300 group"
			aria-label="Read more about Battle Electric"
		>
			Read More About Us
			<Chevron class="w-4 h-4 transition-transform group-hover:translate-x-1" />
		</a>
	</div>

	<div class="tesla-image-container flex justify-center">
		<a
			href="https://www.tesla.com/support/charging/wall-connector"
			target="_blank"
			rel="noopener noreferrer"
			class="tesla-connector-link"
			aria-label="Learn more about Tesla Wall Connector installation services"
		>
			<img src="/tesla/Black/tesla_connector.svg" alt="Tesla wall connector" loading="lazy" />
		</a>
	</div>
</section>

<style>
	.tesla-connector-link {
		display: inline-block;
		padding: 1.5rem;
		border-radius: 1rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 2px solid transparent;
	}

	.tesla-connector-link:hover {
		background: rgba(245, 238, 49, 0.1);
		border-color: var(--color-battle-yellow);
		transform: translateY(-4px);
		box-shadow: 0 12px 35px rgba(245, 238, 49, 0.25);
	}

	.tesla-connector-link img {
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.tesla-connector-link:hover img {
		transform: scale(1.05) rotate(2deg);
	}

	/* Accessibility - Reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.tesla-connector-link,
		.tesla-connector-link img {
			transition: none;
		}

		.tesla-connector-link:hover img {
			transform: none;
		}
	}
</style>
