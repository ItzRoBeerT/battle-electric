---
// src/components/sections/Footer.astro
export interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;

// Datos estructurados del footer
const contactInfo = {
	phone: '(786) 404-3885',
	email: 'battleelectric050@gmail.com',
	hours: {
		weekdays: 'Monday to Saturday 7:00 AM - 7:00 PM',
		weekend: 'Sunday - Closed',
	},
	license: 'License #EC13010206',
};

const navigation = {
	main: [
		{ name: 'Home', href: '/' },
		{ name: 'Services', href: '/services' },
		{ name: 'About Us', href: '/about-us' },
		{ name: 'Contact Us', href: '/contact-us' },
	],
	services: [
		{ name: 'Residential Electric', href: '/services/residential' },
		{ name: 'Commercial Electric', href: '/services/commercial' },
		{ name: 'Tesla Wall Connector', href: '/services/tesla' },
		{ name: 'Electrical Repairs', href: '/services/repairs' },
	],
	legal: [
		{ name: 'Privacy Policy', href: '/privacy' },
		{ name: 'Terms of Service', href: '/terms' },
		{ name: 'License Info', href: '/license' },
	],
};

const socialMedia = [
	{
		name: 'Facebook',
		href: 'https://facebook.com/battleelectric',
		icon: 'facebook',
	},
	{
		name: 'Instagram',
		href: 'https://instagram.com/battleelectric',
		icon: 'instagram',
	},
	{
		name: 'LinkedIn',
		href: 'https://linkedin.com/company/battle-electric',
		icon: 'linkedin',
	},
];

const currentYear = new Date().getFullYear();
---

<footer
	class={`footer-wrapper bg-gray-900 text-white relative overflow-hidden ${className}`}
	role="contentinfo"
	aria-label="Site footer"
>
	<!-- Background Pattern -->
	<div class="absolute inset-0 opacity-5">
		<div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-indigo-700"></div>
		<div
			class="absolute inset-0"
			style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 50px 50px;"
		>
		</div>
	</div>

	<div class="relative z-10">
		<!-- Main Footer Content -->
		<div class="container mx-auto px-6 py-16 lg:py-20">
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
				<!-- Company Info Section -->
				<div class="company-info lg:col-span-1 space-y-6">
					<div class="brand-section">
						<img
							src="/logo_final.png"
							alt="Battle Electric logo"
							class="h-12 w-auto mb-4 transition-transform duration-300 hover:scale-105"
							loading="lazy"
						/>
						<p class="text-gray-300 text-sm leading-relaxed max-w-xs">
							Your trusted partner for all electrical services. Serving South Florida with expertise and
							reliability since 1985.
						</p>
					</div>

					<!-- Contact Quick Info -->
					<div class="contact-quick space-y-3">
						<div class="flex items-center gap-3 text-sm">
							<svg
								class="w-4 h-4 text-blue-400 flex-shrink-0"
								fill="currentColor"
								viewBox="0 0 20 20"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M2 3.5A1.5 1.5 0 013.5 2h1.148a1.5 1.5 0 011.465 1.175l.716 3.223a1.5 1.5 0 01-1.052 1.767l-.933.267c-.41.117-.643.555-.48.95a11.542 11.542 0 006.254 6.254c.395.163.833-.07.95-.48l.267-.933a1.5 1.5 0 011.767-1.052l3.223.716A1.5 1.5 0 0118 15.352V16.5a1.5 1.5 0 01-1.5 1.5H15c-1.149 0-2.263-.15-3.326-.43A13.022 13.022 0 012 8.5v-.5z"
									clip-rule="evenodd"></path>
							</svg>
							<a
								href="tel:+17864043885"
								class="text-gray-300 hover:text-white transition-colors duration-200"
								aria-label="Call Battle Electric at (786) 404-3885"
							>
								{contactInfo.phone}
							</a>
						</div>

						<div class="flex items-center gap-3 text-sm">
							<svg
								class="w-4 h-4 text-blue-400 flex-shrink-0"
								fill="currentColor"
								viewBox="0 0 20 20"
								aria-hidden="true"
							>
								<path
									d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z"
								></path>
								<path
									d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z"
								></path>
							</svg>
							<a
								href="mailto:battleelectric050@gmail.com"
								class="text-gray-300 hover:text-white transition-colors duration-200"
								aria-label="Email Battle Electric"
							>
								{contactInfo.email}
							</a>
						</div>
					</div>
				</div>

				<!-- Navigation Section -->
				<div class="navigation-section">
					<h3 class="text-lg font-semibold mb-6 text-white">Navigation</h3>
					<nav aria-label="Footer navigation">
						<ul class="space-y-3">
							{
								navigation.main.map((link) => (
									<li>
										<a
											href={link.href}
											class="w-fit text-gray-300 hover:text-white hover:translate-x-1 transition-all duration-200 text-sm block"
										>
											{link.name}
										</a>
									</li>
								))
							}
						</ul>
					</nav>
				</div>

				<!-- Services Section -->
				<div class="services-section">
					<h3 class="text-lg font-semibold mb-6 text-white">Our Services</h3>
					<nav aria-label="Services navigation">
						<ul class="space-y-3">
							{
								navigation.services.map((service) => (
									<li>
										<a
											href={service.href}
											class="w-fit text-gray-300 hover:text-white hover:translate-x-1 transition-all duration-200 text-sm block"
										>
											{service.name}
										</a>
									</li>
								))
							}
						</ul>
					</nav>
				</div>

				<!-- Contact & Hours Section -->
				<div class="contact-section">
					<h3 class="text-lg font-semibold mb-6 text-white">Business Hours</h3>
					<div class="space-y-4">
						<div class="hours-info space-y-2">
							<div class="flex items-start gap-2">
								<svg
									class="w-4 h-4 text-blue-400 mt-0.5 flex-shrink-0"
									fill="currentColor"
									viewBox="0 0 20 20"
									aria-hidden="true"
								>
									<path
										fill-rule="evenodd"
										d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-13a.75.75 0 00-1.5 0v5c0 .414.336.75.75.75h4a.75.75 0 000-1.5h-3.25V5z"
										clip-rule="evenodd"></path>
								</svg>
								<div class="text-sm">
									<p class="text-gray-300">{contactInfo.hours.weekdays}</p>
									<p class="text-gray-400 mt-1">{contactInfo.hours.weekend}</p>
								</div>
							</div>
						</div>

						<!-- Social Media -->
						<div class="social-section">
							<h4 class="text-sm font-medium mb-4 text-white">Follow Us</h4>
							<div class="flex gap-3">
								{
									socialMedia.map((social) => (
										<a
											href={social.href}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link w-10 h-10 rounded-lg bg-gray-800 border border-gray-700 flex items-center justify-center hover:bg-blue-600 hover:border-blue-500 transition-all duration-300 group"
											aria-label={`Follow Battle Electric on ${social.name}`}
										>
											{social.icon === 'facebook' && (
												<svg
													class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors"
													fill="currentColor"
													viewBox="0 0 24 24"
													aria-hidden="true"
												>
													<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
												</svg>
											)}
											{social.icon === 'instagram' && (
												<svg
													class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors"
													fill="currentColor"
													viewBox="0 0 24 24"
													aria-hidden="true"
												>
													<path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323C5.902 8.198 7.053 7.708 8.35 7.708s2.448.49 3.323 1.297c.897.875 1.387 2.026 1.387 3.323s-.49 2.448-1.297 3.323c-.875.897-2.026 1.387-3.323 1.387z" />
												</svg>
											)}
											{social.icon === 'linkedin' && (
												<svg
													class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors"
													fill="currentColor"
													viewBox="0 0 24 24"
													aria-hidden="true"
												>
													<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
												</svg>
											)}
										</a>
									))
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Bottom Bar -->
		<div class="border-t border-gray-800">
			<div class="container mx-auto px-6 py-6">
				<div class="flex flex-col md:flex-row justify-between items-center gap-4">
					<p class="text-gray-400 text-sm text-center md:text-left">
						© {currentYear} Battle Electric. All rights reserved.
					</p>
					<span class="text-gray-400 text-sm">
						{contactInfo.license}
					</span>

					<!-- Legal Links -->
					<nav aria-label="Legal information">
						<ul class="flex flex-wrap gap-6 text-sm">
							{
								navigation.legal.map((link, index) => (
									<li>
										<a
											href={link.href}
											class="text-gray-400 hover:text-white transition-colors duration-200"
										>
											{link.name}
										</a>
										{index < navigation.legal.length - 1 && (
											<span class="text-gray-600 ml-6">|</span>
										)}
									</li>
								))
							}
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer-wrapper {
		/* Asegurar que el footer siempre esté al fondo */
		margin-top: auto;
	}

	/* Animaciones sutiles */
	.social-link {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.social-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(59, 130, 246, 0.25);
	}

	/* Efectos hover para links */
	.navigation-section a,
	.services-section a {
		position: relative;
	}

	.navigation-section a::after,
	.services-section a::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 1px;
		background: currentColor;
		transition: width 0.3s ease;
	}

	.navigation-section a:hover::after,
	.services-section a:hover::after {
		width: 100%;
	}

	/* Responsive improvements */
	@media (max-width: 768px) {
		.container {
			padding-left: 1rem;
			padding-right: 1rem;
		}

		.social-link {
			width: 2.5rem;
			height: 2.5rem;
		}

		.social-link svg {
			width: 1.25rem;
			height: 1.25rem;
		}
	}

	/* Focus states para accesibilidad */
	.social-link:focus,
	.navigation-section a:focus,
	.services-section a:focus,
	.contact-quick a:focus {
		outline: 2px solid #3b82f6;
		outline-offset: 2px;
		border-radius: 4px;
	}

	/* Preload hint para mejor performance */
	.company-info img {
		content-visibility: auto;
	}
</style>
