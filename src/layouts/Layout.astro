---
import './src/styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description: string;
	canonical?: string;
	robots?: string;
}

const {
	title = 'Electrical Service Experts | Battle Electric',
	description = 'Your trusted partner for all electrical services, from installations to repairs. Serving residential and commercial clients with expertise and reliability.',
	canonical,
	robots,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		{canonical && <link rel="canonical" href={canonical} />}
		{robots && <meta name="robots" content={robots} />}
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
