---
import Layout from '../../../layouts/Layout.astro';
import Chevron from '../../../assets/icons/chevron.svg';
import Star from '../../../assets/icons/star.svg';
import MobilePhone from '../../../assets/icons/mobile-phone.svg';
import CircleCheck from '../../../assets/icons/circle-check.svg';
import Anchor from '../../../components/Anchor.astro';
import Carousel, { type CarouselSlide } from '../../../components/Carousel.astro';
import AnchorOutlined from '../../../components/AnchorOutlined.astro';
import Building from '../../../assets/icons/building.svg';
import Tesla from '../../../assets/services/ev-charging/tesla.jpeg';

const title = 'Level 2 EV Charging Installation | 240V Professional Setup | Battle Electric';
const description =
	'Level 2 EV charging installation by licensed electricians. 240V charging delivers 20-40 miles per hour with no wait time. Smart scheduling and cost savings vs public charging.';
const canonical = 'https://battleelectricfl.com/services/ev-charging/level-2';

async function getLevel2Images() {
	const images = import.meta.glob<{ default: ImageMetadata }>(
		'/src/assets/services/ev-charging/level-2*.{jpeg,jpg,png,gif,webp}'
	);

	const imageEntries = await Promise.all(
		Object.entries(images).map(async ([path, loader]) => {
			const module = await loader();
			return {
				path,
				image: module.default,
				name:
					path
						.split('/')
						.pop()
						?.replace(/\.[^/.]+$/, '') || '',
			};
		})
	);

	return imageEntries;
}

const level2Images = await getLevel2Images();

const slides: CarouselSlide[] = level2Images.map((image) => ({
	id: image.name,
	src: image.image.src,
	alt: image.name,
}));

slides.unshift({
	id: 'tesla',
	src: Tesla.src,
	alt: 'Tesla EV Charging',
});
---

<Layout title={title} description={description} canonical={canonical}>
	<section class="py-16 bg-gradient-to-br from-yellow-50 to-orange-50">
		<div class="container mx-auto px-4 max-w-6xl">
			<div class="mb-8">
				<a
					href="/services/ev-charging/"
					class="inline-flex items-center text-gray-600 hover:text-gray-700 font-medium transition-colors"
				>
					<Chevron class="w-4 h-4 mr-2 rotate-180 text-gray-600" />
					Back to EV Charging Overview
				</a>
			</div>

			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div>
					<div
						class="inline-flex items-center bg-green-600 text-white px-4 py-2 rounded-full text-sm font-bold mb-6"
					>
						<Star class="w-5 h-5 mr-1" style={{ color: '#f5ee31' }} />
						Most Recommended Solution
					</div>

					<div class="flex items-center mb-6">
						<div class="w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mr-6">
							<span class="text-3xl font-bold text-gray-600">2</span>
						</div>
						<div>
							<h1 class="text-4xl/tight md:text-5xl/tight font-bold text-gray-900 mb-2">
								Level 2 Charging
							</h1>
							<p class="text-xl text-gray-600 font-semibold">240V Professional Installation</p>
						</div>
					</div>

					<div class="bg-yellow-100 border-l-4 border-gray-600 p-6 rounded-r-lg mb-8">
						<h2 class="text-2xl font-bold text-yellow-800 mb-3 flex gap-2">
							<CircleCheck /> READY WHEN YOU ARE
						</h2>
						<p class="text-gray-700 text-lg leading-relaxed">
							Simply <strong>plug in when arriving home and wake up to a fully charged car</strong>,
							effortlessly. No need to worry about range or finding charging stations.
						</p>
