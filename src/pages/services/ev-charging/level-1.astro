---
import Carousel from '../../../components/Carousel.astro';
import Layout from '../../../layouts/Layout.astro';
import charger from '../../../assets/services/ev-charging/level1-charger.webp';
import plug from '../../../assets/services/ev-charging/level1-plug.webp';
import type { CarouselSlide } from '../../../components/Carousel.astro';
import Anchor from '../../../components/Anchor.astro';
import Chevron from '../../../assets/icons/chevron.svg';
import AnchorOutlined from '../../../components/AnchorOutlined.astro';

const title = 'Level 1 EV Charging Installation | 120V Standard Outlet | Battle Electric';
const description =
	'Level 1 EV charging uses standard 120V home outlets. Most cost-effective option with 3-5 miles per hour charging. Learn about installation requirements and limitations.';
const canonical = 'https://battleelectricfl.com/services/ev-charging/level-1';

const slides: CarouselSlide[] = [
	{
		id: 'slide-2',
		src: plug.src,
		alt: '120V Standard Outlet',
	},
	{
		id: 'slide-1',
		src: charger.src,
		alt: 'Level 1 Charging Setup',
	},
];
---

<Layout title={title} description={description} canonical={canonical}>
	<section class="py-16 bg-gradient-to-br from-yellow-50 to-gray-50">
		<div class="container mx-auto px-4 max-w-6xl">
			<div class="mb-8">
				<a
					href="/services/ev-charging/"
					class="inline-flex items-center text-gray-600 hover:text-gray-700 font-medium transition-colors"
				>
					<Chevron class="w-4 h-4 mr-2 rotate-180 text-gray-600" />
					Back to EV Charging Overview
				</a>
			</div>
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div>
					<div class="flex items-center mb-6">
						<div class="w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mr-6">
							<span class="text-3xl font-bold text-gray-600">1</span>
						</div>
						<div>
							<h1 class="text-4xl/tight md:text-5xl/tight font-bold text-gray-900 mb-2">
								Level 1 Charging
							</h1>
							<p class="text-xl text-gray-600 font-semibold">120V Standard Home Outlet</p>
						</div>
					</div>
					<p class="text-lg/relaxed text-gray-700 mb-8">
						Level 1 charging utilizes a <strong>120-volt standard home outlet</strong>
						that most homes already have available in garages or exterior locations. It's the <strong
							>most cost-effective</strong
						> option as most EVs come with a 120V charger cable at purchase.
					</p>
					<div class="grid grid-cols-2 gap-4 mb-8">
						<div class="bg-white rounded-lg p-4 shadow-sm border border-yellow-100">
							<div class="text-2xl font-bold text-gray-600 mb-1">3-5</div>
							<div class="text-sm text-gray-600">Miles per hour</div>
						</div>
						<div class="bg-white rounded-lg p-4 shadow-sm border border-yellow-100">
							<div class="text-2xl font-bold text-gray-600 mb-1">120V</div>
							<div class="text-sm text-gray-600">Standard outlet</div>
						</div>
						<div class="bg-white rounded-lg p-4 shadow-sm border border-yellow-100">
							<div class="text-2xl font-bold text-gray-600 mb-1">$0-200</div>
							<div class="text-sm text-gray-600">Typical cost</div>
						</div>
						<div class="bg-white rounded-lg p-4 shadow-sm border border-yellow-100">
							<div class="text-2xl font-bold text-gray-600 mb-1">Included</div>
							<div class="text-sm text-gray-600">Cable with EV</div>
						</div>
					</div>
					<Anchor
						href="/contact-us"
						text="Get Level 1 Setup Quote"
						ariaLabel="Get a quote for Level 1 EV charging installation"
					/>
				</div>
				<Carousel slides={slides} id="level-1-carousel" />
			</div>
		</div>
	</section>

	<section class="py-16 bg-white">
		<div class="container mx-auto px-4 max-w-6xl">
			<h2 class="text-3xl/tight md:text-4xl/tight font-bold text-gray-900 mb-12 text-center">
				How Level 1 Charging Works
			</h2>

			<div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
				<div>
					<h3 class="text-2xl font-bold text-gray-900 mb-6">Simple & Straightforward Setup</h3>
					<div class="space-y-6">
						<div class="flex items-start">
							<div
								class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
							>
								<span class="text-sm font-bold text-gray-600">1</span>
							</div>
							<div>
								<h4 class="font-semibold text-gray-900 mb-2">Use Existing Outlet</h4>
								<p class="text-gray-600">
									Most homes already have suitable 120V outlets in garages or exterior locations.
								</p>
							</div>
						</div>
						<div class="flex items-start">
							<div
								class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
							>
								<span class="text-sm font-bold text-gray-600">2</span>
							</div>
							<div>
								<h4 class="font-semibold text-gray-900 mb-2">Plug in Cable</h4>
								<p class="text-gray-600">
									Use the 120V charging cable that comes included with most electric vehicles.
								</p>
							</div>
						</div>
						<div class="flex items-start">
							<div
								class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
							>
								<span class="text-sm font-bold text-gray-600">3</span>
							</div>
							<div>
								<h4 class="font-semibold text-gray-900 mb-2">Start Charging</h4>
								<p class="text-gray-600">
									No additional electrical installation typically required - just plug and charge.
								</p>
							</div>
						</div>
					</div>
				</div>

				<div class="bg-yellow-50 rounded-xl p-8">
					<h3 class="text-xl font-bold text-gray-900 mb-6">Technical Specifications</h3>
					<div class="space-y-4">
						<div class="flex justify-between items-center py-3 border-b border-yellow-200">
							<span class="text-yellow-800 font-medium">Voltage:</span>
							<span class="text-gray-900 font-semibold">120V AC</span>
						</div>
						<div class="flex justify-between items-center py-3 border-b border-yellow-200">
							<span class="text-yellow-800 font-medium">Current:</span>
							<span class="text-gray-900 font-semibold">12-16 Amps</span>
						</div>
						<div class="flex justify-between items-center py-3 border-b border-yellow-200">
							<span class="text-yellow-800 font-medium">Power Output:</span>
							<span class="text-gray-900 font-semibold">1.4-1.9 kW</span>
						</div>
						<div class="flex justify-between items-center py-3 border-b border-yellow-200">
							<span class="text-yellow-800 font-medium">Charging Speed:</span>
							<span class="text-gray-900 font-semibold">3-5 miles/hour</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="py-16">
		<div class="container mx-auto px-4 max-w-6xl">
			<h2 class="text-3xl/tight md:text-4xl/tight font-bold text-gray-900 mb-12 text-center">
				Advantages & Limitations
			</h2>
			<div class="grid lg:grid-cols-2 gap-8">
				<div class="bg-white rounded-xl p-8 shadow-lg">
					<h3 class="text-2xl font-bold text-green-600 mb-8 flex items-center">
						<svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						Key Advantages
					</h3>
					<div class="space-y-6">
						<div class="p-4 bg-green-50 rounded-lg border-l-4 border-green-500">
							<h4 class="font-semibold text-green-800 mb-2">Most Cost Effective</h4>
							<p class="text-green-700 text-sm">
								Utilizes existing home infrastructure with minimal to no additional electrical work
								required.
							</p>
						</div>
						<div class="p-4 bg-green-50 rounded-lg border-l-4 border-green-500">
							<h4 class="font-semibold text-green-800 mb-2">Cable Included with Vehicle</h4>
							<p class="text-green-700 text-sm">
								Most electric vehicles come with a 120V charging cable at the time of purchase.
							</p>
						</div>
						<div class="p-4 bg-green-50 rounded-lg border-l-4 border-green-500">
							<h4 class="font-semibold text-green-800 mb-2">Universal Availability</h4>
							<p class="text-green-700 text-sm">
								Standard outlets available in most homes, garages, and exterior locations.
							</p>
						</div>
						<div class="p-4 bg-green-50 rounded-lg border-l-4 border-green-500">
							<h4 class="font-semibold text-green-800 mb-2">No Permitting Required</h4>
							<p class="text-green-700 text-sm">
								Simple plug-in solution with no electrical permits or inspections needed.
							</p>
						</div>
					</div>
				</div>
				<div class="bg-white rounded-xl p-8 shadow-lg">
					<h3 class="text-2xl font-bold text-red-600 mb-8 flex items-center">
						<svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.634 0L4.168 16.5c-.77.833.192 2.5 1.732 2.5z"
							></path>
						</svg>
						Important Limitations
					</h3>
					<div class="space-y-6">
						<div class="p-4 bg-red-50 rounded-lg border-l-4 border-red-500">
							<h4 class="font-semibold text-red-800 mb-2">VERY SLOW Charging</h4>
							<p class="text-red-700 text-sm">
								Only 3-5 miles of range per hour - making this method not very efficient for daily use.
							</p>
						</div>
						<div class="p-4 bg-orange-50 rounded-lg border-l-4 border-orange-500">
							<h4 class="font-semibold text-orange-800 mb-2">Long Charging Times</h4>
							<p class="text-orange-700 text-sm">
								Full charge can take 12-24+ hours depending on battery size and depletion level.
							</p>
						</div>
						<div class="p-4 bg-yellow-50 rounded-lg border-l-4 border-yellow-500">
							<h4 class="font-semibold text-yellow-800 mb-2">Circuit Load Concerns</h4>
							<p class="text-yellow-700 text-sm">
								May overload circuits shared with other appliances or trip breakers during use.
							</p>
						</div>
						<div class="p-4 bg-gray-50 rounded-lg border-l-4 border-gray-500">
							<h4 class="font-semibold text-gray-800 mb-2">Limited Daily Range</h4>
							<p class="text-gray-700 text-sm">
								Not suitable for high-mileage drivers or those needing quick turnaround times.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="py-16 bg-gradient-to-br from-yellow-50 to-gray-100">
		<div class="container mx-auto px-4 max-w-4xl text-center">
			<h2 class="text-3xl/tight md:text-4xl/tight font-bold mb-6">Ready to Explore Your EV Charging Options?</h2>
			<p class="text-xl mb-8 max-w-2xl mx-auto">
				While Level 1 charging works for specific situations, let our experts help you determine the best
				charging solution for your needs and driving habits.
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<Anchor
					href="/contact-us"
					text="Get Free Consultation"
					ariaLabel="Get a quote for Level 1 EV charging installation"
				/>
				<AnchorOutlined
					href="/services/ev-charging/level-2/"
					text="Compare Level 2 Charging"
					ariaLabel="Compare Level 2 Charging"
				/>
			</div>
		</div>
	</section>
</Layout>
