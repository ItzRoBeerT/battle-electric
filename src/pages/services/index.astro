---
import Layout from "../../layouts/Layout.astro";

const title = "Services | Electrical Panel Installation | Battle Electric";
const description = "Explore our comprehensive electrical services, including installations, repairs, and maintenance for residential and commercial properties. Trust Battle Electric for all your electrical needs.";
const canonical = "https://battleelectricfl.com/services";
---

<Layout title={title} description={description} canonical={canonical}>
  <h1 class="font-bold text-4xl mb-4">Our Services</h1>
  <p class="mb-6">At Battle Electric, we offer a wide range of electrical services to meet your needs:</p>
  
  <ul class="list-disc pl-5">
    <li>Electrical Panel Installation</li>
    <li>Wiring and Rewiring</li>
    <li>Lighting Installation</li>
    <li>Electrical Repairs</li>
    <li>Generator Installation</li>
    <li>Commercial Electrical Services</li>
  </ul>

  <p class="mt-6">Contact us today to learn more about how we can assist you with your electrical projects!</p>
  
</Layout>